@model aspnetcoreapp.Models.MessageModel

@{
    ViewData["Title"] = "Edit";
}


@using (Html.BeginForm("EditById", "Home", FormMethod.Post))
{
    <table cellpadding="0" cellspacing="0">
        <tr>
            <th colspan="2" align="center">Message Details</th>
        </tr>
        <tr>
            <td>Name: </td>
            <td>
                @Html.TextBoxFor(m => m.Name)
            </td>
        </tr>

        <tr>
            <td>Message: </td>
            <td>
                @Html.TextBoxFor(m => m.Text)
            </td>
        </tr>
        <tr>
            <td><input type="hidden" name="Id" value="@Model.Id" /></td>
            <td><input type="submit" value="Submit" /></td>
        </tr>
    </table>
}